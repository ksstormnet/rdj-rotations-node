{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["jest", "node"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
